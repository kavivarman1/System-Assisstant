<Window x:Class="ChatbotApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Assistant Pro" 
        Height="700" 
        Width="1000"
        MinHeight="500"
        MinWidth="800"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="{DynamicResource WindowBackgroundBrush}"
            CornerRadius="12"
            BorderBrush="{DynamicResource WindowBorderBrush}"
            BorderThickness="1">
        
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" BlurRadius="20" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Background="{DynamicResource TitleBarBackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                    <Ellipse Width="8" Height="8" Fill="{DynamicResource AccentBrush}" Margin="0,0,8,0"/>
                    <TextBlock Text="AI Assistant Pro" 
                               FontFamily="{DynamicResource MainFontFamily}"
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Window Controls (WrapPanel for responsiveness) -->
                <WrapPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Panel.ZIndex="2">
                    <Button Style="{StaticResource WindowControlButtonStyle}" 
                            Content="⚙️" 
                            ToolTip="Settings"
                            Click="SettingsButton_Click"/>
                    <Button Style="{StaticResource WindowControlButtonStyle}" 
                            Content="🌙" 
                            ToolTip="Toggle Theme"
                            Click="ThemeToggleButton_Click"/>
                    <Button Style="{StaticResource WindowControlButtonStyle}" 
                            Content="🗕" 
                            ToolTip="Minimize"
                            Click="MinimizeButton_Click"/>
                    <Button Style="{StaticResource WindowControlButtonStyle}" 
                            Content="✕" 
                            ToolTip="Close"
                            Click="CloseButton_Click"/>
                </WrapPanel>
                <!-- Make title bar draggable -->
                <Rectangle Grid.ColumnSpan="2" Fill="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Panel.ZIndex="1"/>
            </Grid>

            <!-- Chat Area -->
            <ScrollViewer Grid.Row="1" 
                          Name="ChatScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Background="{DynamicResource ChatBackgroundBrush}"
                          Padding="0">
                
                <ItemsControl ItemsSource="{Binding Messages}" Margin="2,2,2,0">
                    <ItemsControl.Resources>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        </Style>
                    </ItemsControl.Resources>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{Binding IsFromUser, Converter={StaticResource UserToBackgroundConverter}}"
                                    CornerRadius="12"
                                    Padding="16,12"
                                    Margin="{Binding IsFromUser, Converter={StaticResource UserToMarginConverter}}"
                                    HorizontalAlignment="{Binding IsFromUser, Converter={StaticResource UserToAlignmentConverter}}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Content}"
                                               FontFamily="{DynamicResource MainFontFamily}"
                                               FontSize="14"
                                               Foreground="White"
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding TimeString}"
                                               FontFamily="{DynamicResource MainFontFamily}"
                                               FontSize="11"
                                               Foreground="#A1A1A1"
                                               HorizontalAlignment="Right"
                                               Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Input Area -->
            <Border Grid.Row="2" 
                    Background="{DynamicResource InputAreaBackgroundBrush}"
                    BorderBrush="{DynamicResource InputAreaBorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="8,8,8,8">
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="40"/>
                        <ColumnDefinition Width="*" MinWidth="80"/>
                        <ColumnDefinition Width="Auto" MinWidth="40"/>
                    </Grid.ColumnDefinitions>

                    <!-- Voice Input Button -->
                    <Button Grid.Column="0" 
                            Style="{StaticResource IconButtonStyle}"
                            Content="🎤"
                            ToolTip="Voice Input"
                            Margin="0,0,8,0"
                            Click="VoiceButton_Click"
                            VerticalAlignment="Center"/>

                    <!-- Text Input -->
                    <Border Grid.Column="1" 
                            Background="{DynamicResource InputBackgroundBrush}"
                            BorderBrush="{DynamicResource InputBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            VerticalAlignment="Center">
                        <TextBox Name="MessageTextBox"
                                 Style="{DynamicResource InputTextBoxStyle}"
                                 Text="{Binding CurrentMessage, UpdateSourceTrigger=PropertyChanged}"
                                 FontFamily="{DynamicResource MainFontFamily}"
                                 FontSize="14"
                                 Foreground="{DynamicResource PrimaryTextBrush}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="8,8"
                                 VerticalContentAlignment="Center"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 MaxHeight="100"
                                 KeyDown="MessageTextBox_KeyDown"
                                 MinWidth="60"/>
                    </Border>

                    <!-- Send Button -->
                    <Button Grid.Column="2" 
                            Style="{StaticResource SendButtonStyle}"
                            Content="➤"
                            ToolTip="Send Message"
                            Margin="8,0,0,0"
                            Click="SendButton_Click"
                            VerticalAlignment="Center"/>

                </Grid>
            </Border>

        </Grid>
    </Border>
</Window>