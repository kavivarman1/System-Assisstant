<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme Color Brushes -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="WindowBorderBrush" Color="#E5E5E5"/>
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="ChatBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="InputAreaBackgroundBrush" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="InputAreaBorderBrush" Color="#E5E5E5"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#D1D5DB"/>
    <SolidColorBrush x:Key="AiMessageBackgroundBrush" Color="#F3F4F6"/>
    <SolidColorBrush x:Key="UserMessageBackgroundBrush" Color="#3B82F6"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#06B6D4"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#1F2937"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#6B7280"/>
    <SolidColorBrush x:Key="HoverBrush" Color="#F3F4F6"/>
    <SolidColorBrush x:Key="PressedBrush" Color="#E5E7EB"/>

    <!-- Light Theme Gradient Brushes -->
    <LinearGradientBrush x:Key="SendButtonGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#3B82F6" Offset="0"/>
        <GradientStop Color="#2563EB" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SendButtonHoverGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#60A5FA" Offset="0"/>
        <GradientStop Color="#3B82F6" Offset="1"/>
    </LinearGradientBrush>

    <!-- Fonts -->
    <FontFamily x:Key="MainFontFamily">Segoe UI</FontFamily>

    <!-- All other styles would be inherited from DarkTheme.xaml -->
    <!-- You can override specific styles here for light theme variations -->

</ResourceDictionary>